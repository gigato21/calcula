<script>
    function calculateIce() {
        const eventType = document.getElementById('eventType').value;
        const guests = parseInt(document.getElementById('guests').value);
        const duration = parseInt(document.getElementById('duration').value);

        if (!eventType || !guests || !duration || guests < 1 || duration < 1 || duration > 24) {
            alert('Por favor verifica todos los campos');
            return;
        }

        const iceCalculations = {
            'fiesta': { factor: 1, tip: 'Considera tener hieleras disponibles y distribuidas estrat√©gicamente' },
            'boda': { factor: 1.5, tip: 'Recomendamos distribuir el hielo entre la cocina y la zona de bebidas' },
            'quincea√±era': { factor: 1.2, tip: 'Ten en cuenta el hielo extra para las fotos con la champa√±a' },
            'pi√±ata': { factor: 0.5, tip: 'Ideal para refrescos y aguas frescas. Considera el clima del d√≠a.' },
            'posada': { factor: 0.8, tip: 'Perfecto para ponche y bebidas calientes. A√±ade extra si habr√° bebidas fr√≠as' },
            'carne': { factor: 1.2, tip: 'Considera hielo extra para enfriar las bebidas r√°pidamente y mantener alimentos frescos' },
            'bautizo': { factor: 0.7, tip: 'Ideal para una celebraci√≥n durante el d√≠a. Ajusta seg√∫n el clima' }
        };

        const calculation = iceCalculations[eventType];
        const totalIce = Math.ceil((guests * calculation.factor * (duration/4)) / 5);
        
        const resultDiv = document.getElementById('result');
        resultDiv.innerHTML = `
            <h3>Recomendaci√≥n de Hielo:</h3>
            <p class="recommendation">
                üßä Necesitar√°s aproximadamente <strong>${totalIce} bolsas de hielo</strong> de 5kg
            </p>
            <p class="recommendation">
                üí° Tip personalizado: ${calculation.tip}
            </p>
        `;
        resultDiv.classList.remove('result-visible');
        void resultDiv.offsetWidth; // Trigger reflow
        resultDiv.classList.add('result-visible');
    }
</script>



